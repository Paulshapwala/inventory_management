/* dracula.qss */
#navigationWidget {
    background-color: #282a36;
}

QPushButton {
    text-align: left;
    padding: 12px;
    border: none;
    border-radius: 0px;
    font-size: 16px;
    font-weight: 500;
    color: #f8f8f2;
}

QPushButton:hover {
    background-color: #44475a;
}

QPushButton:checked {
    background-color: #44475a;
    border-left: 3px solid #ff79c6;
    font-weight: 600;
}

